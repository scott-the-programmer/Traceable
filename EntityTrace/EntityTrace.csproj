<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Package metadata -->
    <PackageId>EntityTrace</PackageId>
    <Version>1.0.0</Version>
    <Authors>EntityTrace Contributors</Authors>
    <Description>A .NET library for creating traceable computations where every value maintains its origin and computation history.</Description>
    <PackageTags>tracing;computation;dependency-tracking;audit-trail</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/yourusername/EntityTrace</RepositoryUrl>
  </PropertyGroup>

</Project>
